<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="DIYAutomotive" >

        <class>edu.neumont.diyauto.Models.AccountModel</class>
        <class>edu.neumont.diyauto.Models.AccountRoleModel</class>
        <class>edu.neumont.diyauto.Models.CarsModel</class>
        <class>edu.neumont.diyauto.Models.CommentModel</class>
        <class>edu.neumont.diyauto.Models.MakeModel</class>
        <class>edu.neumont.diyauto.Models.ModelModel</class>
        <class>edu.neumont.diyauto.Models.PostModel</class>
        <class>edu.neumont.diyauto.Models.SubModelModel</class>
        <class>edu.neumont.diyauto.Models.ThreadsModel</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mysqldb"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="stuff"/>
            <property name="hb2ddl.auto" value="create"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="toplink.jdbc.user" value="root"/>
            <property name="toplink.jdbc.password" value="stuff"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="stuff"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionUserName" value="root"/>
            <property name="openjpa.ConnectionPassword" value="stuff"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="root"/>
            <property name="eclipselink.jdbc.password" value="stuff"/>

        </properties>
    </persistence-unit>
</persistence>