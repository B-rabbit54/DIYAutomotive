<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="DIYAutomotive">
        <provider>
            org.hibernate.ejb.HibernatePersistence
        </provider>
        <class>edu.neumont.diyauto.Models.CarModel</class>
        <class>edu.neumont.diyauto.Models.CommentModel</class>
        <class>edu.neumont.diyauto.Models.MakeModel</class>
        <class>edu.neumont.diyauto.Models.Model</class>
        <class>edu.neumont.diyauto.Models.PostModel</class>
        <class>edu.neumont.diyauto.Models.SubModel</class>
        <class>edu.neumont.diyauto.Models.ThreadModel</class>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
        </properties>
    </persistence-unit>
</persistence>